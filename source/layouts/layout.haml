!!! 5
%html{ :lang => 'en', :'ng-app' => 'Presenter' }
  %head
    %meta{ :charset => 'utf-8' }
    %meta{ :content => 'IE=edge,chrome=1', 'http-equiv' => 'X-UA-Compatible' }
    %title= current_page.data.title || 'Presenter'

    = stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Oswald'
    = stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Merriweather:400,300,700,400italic'
    = stylesheet_link_tag 'application'

  %body{ class: page_classes }

    %progress

    %script{type: "text/ng-template", id: 'index'}
      = yield

    %div(ui-view)

    = javascript_include_tag 'application'
